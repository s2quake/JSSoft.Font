<UserControl x:Class="JSSoft.Font.ApplicationHost.Dialogs.Views.SelectColorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:nmfc="clr-namespace:Ntreev.ModernUI.Framework.Controls;assembly=Ntreev.ModernUI.Framework"
             mc:Ignorable="d">
    <StackPanel>
        <nmfc:ColorPicker CurrentColor="{Binding CurrentColor, Mode=TwoWay}" />
        <Button x:Name="Select" IsDefault="True" Content="Select..." HorizontalAlignment="Center" Style="{DynamicResource Dialog_Button_Style}" />
    </StackPanel>
</UserControl>
